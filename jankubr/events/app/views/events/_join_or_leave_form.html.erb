<% if event.user_attending?(current_user) %>
  <%= t('events.attending_this_event') %><br>
  <%= form_for event, url: leave_event_path(event), method: :patch do %>
    <%= submit_tag t('events.leave') %>
  <% end %>
<% elsif event.capacity_reached? %>
  <%= t('events.capacity_reached') %><br>
<% elsif event.too_late_to_join? %>
  <%= t('events.too_late_to_join') %><br>
<% else %>
  <%= form_for event, url: join_event_path(event), method: :patch do %>
    <%= submit_tag t('events.join') %>
  <% end %>
<% end %>
